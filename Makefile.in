VPATH=%VPATH%

ifeq ($(CFG_OSTYPE),apple-darwin)
    OSTYPE=darwin
endif
ifeq ($(CFG_OSTYPE),unknown-linux-gnu)
    OSTYPE=linux
endif
ifeq ($(CFG_OSTYPE),linux-androideabi)
    OSTYPE=linux
endif

C_SRC= \
    src/libwapcaplet.c \
	$(NULL)

C_OBJS = $(patsubst %.c,%.o,$(C_SRC))
CFLAGS += -I$(VPATH)/src -I$(VPATH)/include -fPIC

.PHONY: all
all: libwapcaplet.dummy

libwapcaplet.a: $(C_OBJS)
	$(AR) rcs $@ $^

%.o: %.c
	mkdir -p `dirname $@` && $(CC) $(CFLAGS) -o $@ -c $<

libwapcaplet.dummy: libwapcaplet.a
	touch $@

.PHONY: check
check:

.PHONY: clean
clean:
	rm -f *.so *.dylib *.dll *.dummy src/*.o


